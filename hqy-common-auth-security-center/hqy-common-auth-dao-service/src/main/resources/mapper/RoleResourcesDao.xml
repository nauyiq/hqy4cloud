<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hqy.auth.dao.RoleResourcesDao">

    <resultMap id="AuthenticationStructMap" type="com.hqy.account.struct.AuthenticationStruct">
        <result property="role" column="role_name"/>
        <collection property="resources" ofType="com.hqy.account.struct.ResourceStruct">
            <result column="path" property="path"/>
            <result column="id" property="id"/>
            <result column="method" property="method"/>
            <result column="permission" property="permission"/>
        </collection>
    </resultMap>

    <insert id="insertOrUpdateRoleResources">
        INSERT INTO t_role_resources
        (
        `role_id`,
        `role_name`,
        `resource_id`
        ) VALUES
        <foreach collection="resources" item="resource" separator=",">
            (
            #{roleId},
            #{role},
            #{resource.id}
            )
        </foreach>
        ON DUPLICATE KEY UPDATE
        `role_name` = VALUES(`role_name`)
    </insert>

    <delete id="deleteByRoleAndResourceIds">
        DELETE
        FROM `t_role_resources`
        WHERE role_id = #{roleId} AND resource_id IN
        <foreach collection="resourceIds" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="getAuthoritiesResourcesByRoles" resultMap="AuthenticationStructMap">
        SELECT
        rr.role_name,
        r.id,
        r.path,
        r.method,
        r.permission
        FROM t_role_resources rr
        LEFT JOIN `t_resource` r ON rr.resource_id = r.id
        WHERE rr.`role_name` IN
        <foreach collection="roles" item="role" open="(" close=")" separator=",">
            #{role}
        </foreach>
    </select>


</mapper>